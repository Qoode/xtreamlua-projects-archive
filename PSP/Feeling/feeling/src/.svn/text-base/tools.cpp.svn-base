#include "tools.hpp"

namespace Tools {
	// Convert a given double value in std::string
	std::string DTS(double d){
		std::ostringstream castbuffer;
		castbuffer << d;
		return castbuffer.str();
	}
	
	// Convert a given int value in std::string
	std::string ITS(int i){
		std::ostringstream castbuffer;
		castbuffer << i;
		return castbuffer.str();
	}
}